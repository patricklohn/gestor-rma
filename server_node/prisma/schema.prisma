generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Enterprise{
  uuid      String @id @default(uuid())
  name      String
  email     String?
  document  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  uuid      String @id @default(uuid())
  name      String
  email     String @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Person {
  uuid        String     @id @default(uuid())
  client      Boolean?
  supplier    Boolean?
  name        String
  email       String?
  observation String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  suppliedWarranties Warranty[] @relation("SupplierWarranty")
  receivedWarranties Warranty[] @relation("ClientWarranty")
}

model Product {
  uuid        String @id @default(uuid())
  description String
  observation String?
  reatedAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Warranty    Warranty[]
}

model Warranty {
  uuid          String @id @default(uuid())
  description   String
  serial_number String?
  data_start    DateTime
  data_buy      DateTime?
  data_end      DateTime?
  productId     String
  product       Product @relation(fields: [productId], references: [uuid])
  supplierId    String
  supplier      Person   @relation("SupplierWarranty", fields: [supplierId], references: [uuid])
  clientId      String
  client        Person   @relation("ClientWarranty", fields: [clientId], references: [uuid])        
  invoice       String?
  invoice_arq   String?
  status        String
  defect        String
  notes         String?
  order_service String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}











